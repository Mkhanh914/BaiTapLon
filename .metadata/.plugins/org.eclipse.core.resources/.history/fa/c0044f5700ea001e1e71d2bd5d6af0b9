package thread;

import javax.swing.*;
import java.awt.*;

public class bai1 extends JFrame {

	private static final long serialVersionUID = 1L;
	private JPanel contentPane;

	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					bai1 frame = new bai1();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	public bai1() {
		// Tạo ImageIcon từ tệp hình ảnh
		ImageIcon imageIcon = new ImageIcon("hinhanh.jpg");
		JLabel jLabel = new JLabel();
		jLabel.setIcon(imageIcon);

		// Tạo JPanel làm contentPane với GridBagLayout
		contentPane = new JPanel(new GridBagLayout());

		// Thêm JLabel và các button vào contentPane
		GridBagConstraints gbc = new GridBagConstraints();
		gbc.gridx = 0;
		gbc.gridy = 0;
		contentPane.add(jLabel, gbc);

		gbc.gridy = 1;
		Button batDauButton = new Button("Bat Dau");
		contentPane.add(batDauButton, gbc);

		gbc.gridy = 2;
		Button xepHangButton = new Button("Xep Hang");
		contentPane.add(xepHangButton, gbc);

		gbc.gridy = 3;
		Button ThoatButton = new Button("Thoat");
		contentPane.add(ThoatButton, gbc);

		// Đặt contentPane làm nội dung của JFrame
		setContentPane(contentPane);

		// Tự động điều chỉnh kích thước frame để phù hợp với nội dung
		pack();

		// Thiết lập một số thuộc tính của frame
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setResizable(false);
		setLocationRelativeTo(null); // Hiển thị frame ở giữa màn hình
	}
}

